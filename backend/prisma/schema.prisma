generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  email     String     @unique
  hash      String
  firstName String?
  lastName  String?
  taskLists TaskList[] @relation("UsersOnTaskLists")

  @@map("users")
}

model TaskList {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  title      String
  shareToken String   @unique @default(uuid())
  users      User[]   @relation("UsersOnTaskLists")
  tasks      Task[]

  @@map("task_lists")
}

model Task {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String
  isDone      Boolean

  listId String
  list   TaskList @relation(fields: [listId], references: [id])

  @@map("tasks")
}
